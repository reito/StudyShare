source 'https://rubygems.org'

gem 'rails', '~> 6.1'
gem 'rake', '~> 13.0'
gem 'sqlite3', '~> 1.4'
ruby '3.2.0'


gem 'bcrypt' # 3.1.12 にはセキュリティ上の問題があるので、バージョンアップ
gem 'faker',                    '~> 2.19'    # 1.7.3 は古いので最新に更新
gem 'carrierwave',              '~> 1.3'     # 最新の安定バージョンに更新
gem 'mini_magick',              '~> 4.9'     # 最新バージョンを使用
gem 'will_paginate',            '~> 3.3.0'   # 最新バージョンを使用
gem 'bootstrap-will_paginate',  '~> 1.0.0'
gem 'bootstrap-sass',           '~> 3.4'     # 3.3.7 のバグ修正が含まれる最新バージョン
gem 'puma',                     '~> 3.12'    # 安定したバージョンに更新
gem 'sass-rails',               '~> 6.0'     # 最新安定バージョンを使用
gem 'uglifier',                 '~> 4.2'     # 最新バージョンに更新
gem 'coffee-rails',             '~> 4.2'     # 問題なければこのままでOK
gem 'jquery-rails',             '~> 4.3'     # 問題なければこのままでOK
gem 'turbolinks',               '~> 5.2'     # 最新バージョンに更新
gem 'jbuilder',                 '~> 2.11'    # 最新バージョンに更新
gem 'mimemagic',                '~> 0.4.2'   # ライセンス問題のため、最新バージョンに更新（0.3.10 は古い）

group :development, :test do
  gem 'byebug',  '~> 11.1', platform: :mri  # 最新バージョンに更新
end

group :development do
  gem 'web-console',           '~> 3.7'   # 最新バージョンに更新
  gem 'listen',                '~> 3.2'   # 最新バージョンに更新
  gem 'spring',                '~> 2.1'   # 最新バージョンに更新
  gem 'spring-watcher-listen', '~> 2.0.1' # このままでOK
end

group :test do
  gem 'rails-controller-testing', '~> 1.0.5'  # 最新バージョンに更新
  gem 'minitest',                 '~> 5.14'   # 最新バージョンに更新
  gem 'minitest-reporters',       '~> 1.3'    # 最新バージョンに更新
  gem 'guard',                    '~> 2.18'   # 最新バージョンに更新
  gem 'guard-minitest',           '~> 2.4.6'  # 最新バージョンに更新
end

group :production do
  gem 'pg'   # PostgreSQL の最新安定バージョン
end


